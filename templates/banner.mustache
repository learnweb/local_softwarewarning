{{!
    @template local_softwarewarning/banner

    Example context (json):
    {
      "severity": "error",
      "text": "Your browser is not supported!",
      "closable": false
    }
}}
<div id="banner-parent">
    {{#href}}<a class="softwarewarning-banner" data-severity="{{severity}}" href="{{{href}}}">{{/href}}
    {{^href}}<span class="softwarewarning-banner" data-severity="{{severity}}">{{/href}}
    {{{text}}}
    {{# closable }}
        <button type="button" class="close" data-dismiss="banner" aria-label="Dismiss the banner">
            <span aria-hidden="true">&times;</span>
        </button>
    {{/ closable }}
    {{^href}}</span>{{/href}}
    {{#href}}</a>{{/href}}
    <div class="fill-element"></div>
</div>